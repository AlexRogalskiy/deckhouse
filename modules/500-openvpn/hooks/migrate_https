#!/bin/bash

### Миграция 2019-08-02: https://github.com/deckhouse/deckhouse/merge_requests/978
#
# Этот хук можно удалить, после выката данного MR'а на все инсталяции.

source /antiopa/shell_lib.sh

function __config__() {
  jo -p onStartup=1
}

function __main__() {
  if values::has --config openvpn.certificateForIngress ; then
    values::set --config openvpn.https "{}"

    if values::has --config openvpn.certificateForIngress.certmanagerClusterIssuerName && values::is_false --config openvpn.certificateForIngress.certmanagerClusterIssuerName && values::has --config openvpn.certificateForIngress.customCertificateSecretName && values::is_false --config openvpn.certificateForIngress.customCertificateSecretName ; then
      values::set --config openvpn.https.mode "Disabled"
    elif values::has --config openvpn.certificateForIngress.certmanagerClusterIssuerName && values::is_false --config openvpn.certificateForIngress.certmanagerClusterIssuerName && ! values::has --config openvpn.certificateForIngress.customCertificateSecretName ; then
      values::set --config openvpn.https.mode "Disabled"
    elif values::has --config openvpn.certificateForIngress.certmanagerClusterIssuerName && ! values::is_false --config openvpn.certificateForIngress.certmanagerClusterIssuerName ; then
      values::set --config openvpn.https.certManager "{}"
      values::set --config openvpn.https.certManager.clusterIssuerName "$(values::get --config openvpn.certificateForIngress.certmanagerClusterIssuerName)"
      values::set --config openvpn.https.mode "CertManager"
    elif values::has --config openvpn.certificateForIngress.customCertificateSecretName && ! values::is_false --config openvpn.certificateForIngress.customCertificateSecretName ; then
      values::set --config openvpn.https.customCertificate "{}"
      values::set --config openvpn.https.customCertificate.secretName "$(values::get --config openvpn.certificateForIngress.customCertificateSecretName)"
      values::set --config openvpn.https.mode "CustomCertificate"
    fi

    values::unset --config openvpn.certificateForIngress
  fi
}

hook::run $@
