#!/bin/bash

source /antiopa/shell_lib.sh

function __config__() {
  jo -p afterHelm=20
}

function __main__() {
  if secrets=$(kubectl get storageclass -o json | jq '.items[] | select(.provisioner == "kubernetes.io/rbd") | .parameters.userSecretName' -r) ; then
    for secret in $secrets ; do
      if ! kubectl -n kube-prometheus get secret $secret > /dev/null 2> /dev/null ; then
        kubectl get secret --all-namespaces --sort-by='.metadata.creationTimestamp' -o json | jq '[.items[] | select(.metadata.name == "'$secret'")][-1] | del(.metadata.annotations,.metadata.uid,.metadata.resourceVersion,.metadata.selfLink,.metadata.creationTimestamp) | .metadata.namespace = "kube-openvpn"' | kubectl create -f -
      fi
    done
  fi
}

hook::run $@
