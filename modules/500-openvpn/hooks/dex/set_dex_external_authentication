#!/bin/bash

source /deckhouse/shell_lib_legacy.sh

function __config__() {
  jo -p beforeHelm=10
}

function __main__() {
  if values::array_has global.enabledModules "user-authn" && [[ $(values::get_first_defined openvpn.https.mode global.modules.https.mode) != "Disabled" ]]; then
    if ! values::has --config openvpn.externalAuthentication ; then
      values::set openvpn.externalAuthentication '{}'
      values::set openvpn.externalAuthentication.authURL "https://openvpn-dex-authenticator.kube-openvpn.svc.$(values::get global.discovery.clusterDomain)/dex-authenticator/auth"
      values::set openvpn.externalAuthentication.authSignInURL 'https://$host/dex-authenticator/sign_in'
      values::set openvpn.internal.deployDexAuthenticator "true"
    else
      values::unset openvpn.internal.deployDexAuthenticator
      values::set openvpn.externalAuthentication "$(values::get --config openvpn.externalAuthentication)"
    fi
  else
    if ! values::has --config openvpn.externalAuthentication ; then
      values::unset openvpn.externalAuthentication
    else
      values::set openvpn.externalAuthentication "$(values::get --config openvpn.externalAuthentication)"
    fi
    values::unset openvpn.internal.deployDexAuthenticator
  fi
}

hook::run $@
