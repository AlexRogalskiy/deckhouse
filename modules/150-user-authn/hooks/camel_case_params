#!/bin/bash

source /antiopa/shell_lib.sh

function __config__ () {
  echo '
{
  "beforeHelm": 1
}'
}

function __main__() {
  ### Миграция 2019-09-04: https://github.com/deckhouse/deckhouse/merge_requests/1071
  # Этот хук можно удалить, после выката релиза с данным коммитом

  if values::has --config userAuthn.publishApi ; then
    values::set --config userAuthn.publishAPI $(values::get --config userAuthn.publishApi)
    values::unset --config userAuthn.publishApi
  fi

}

hook::run "$@"
