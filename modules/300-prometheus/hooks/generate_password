#!/bin/bash

source /antiopa/shell_lib.sh

function __config__() {
  jo -p beforeHelm=10
}

function __main__() {
  if ! values::has prometheus.externalAuthentication ; then
    if ! values::has prometheus.password ; then
      values::set --config prometheus.password $(values::generate_password)
    fi
  else
    values::unset --config prometheus.password
  fi
}

hook::run $@
