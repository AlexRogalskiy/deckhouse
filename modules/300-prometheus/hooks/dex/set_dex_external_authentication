#!/bin/bash

source /deckhouse/shell_lib.sh

function __config__() {
  cat << EOF
    configVersion: v1
    beforeHelm: 9
EOF
}

function __main__() {
  if values::array_has global.enabledModules "user-authn" && [[ $(values::get_first_defined prometheus.https.mode global.modules.https.mode) != "Disabled" ]]; then
    if ! values::has --config prometheus.auth.externalAuthentication ; then
      values::set prometheus.auth.externalAuthentication '{}'
      values::set prometheus.auth.externalAuthentication.authURL "https://grafana-dex-authenticator.d8-monitoring.svc.$(values::get global.discovery.clusterDomain)/dex-authenticator/auth"
      values::set prometheus.auth.externalAuthentication.authSignInURL 'https://$host/dex-authenticator/sign_in'
      values::set prometheus.internal.deployDexAuthenticator "true"
    else
      values::unset prometheus.internal.deployDexAuthenticator
      values::set prometheus.auth.externalAuthentication "$(values::get --config prometheus.externalAuthentication)"
    fi
  else
    if ! values::has --config prometheus.auth.externalAuthentication ; then
      values::unset prometheus.auth.externalAuthentication
    else
      values::set prometheus.auth.externalAuthentication "$(values::get --config prometheus.auth.externalAuthentication)"
    fi
    values::unset prometheus.internal.deployDexAuthenticator
  fi
}

hook::run $@
