#!/bin/bash

source /deckhouse/shell_lib_legacy.sh

function __config__() {
  jo -p afterHelm=10
}

function __main__() {
  kubectl::jq_patch d8-system namespace/d8-system ".metadata.annotations += {\"extended-monitoring.flant.com/enabled\":\"\"}"
  kubectl::jq_patch kube-system namespace/kube-system ".metadata.annotations += {\"extended-monitoring.flant.com/enabled\":\"\"}"
}

hook::run $@
