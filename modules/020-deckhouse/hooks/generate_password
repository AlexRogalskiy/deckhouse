#!/bin/bash

source /deckhouse/shell_lib.sh

function __config__() {
  cat << EOF
    configVersion: v1
    beforeHelm: 10
EOF
}

function __main__() {
  if ! values::has deckhouse.auth.externalAuthentication ; then
    if ! values::has deckhouse.auth.password ; then
      if ! values::has --config deckhouse.auth ; then
        values::set --config deckhouse.auth {}
      fi
      values::set --config deckhouse.auth.password $(tools::generate_password)
    fi
  else
    values::unset --config deckhouse.auth.password
    if [[ $(values::get --config deckhouse.auth) == '{}' ]]; then
      values::unset --config deckhouse.auth {}
    fi
  fi
}

hook::run $@
