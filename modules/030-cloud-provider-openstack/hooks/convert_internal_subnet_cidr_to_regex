#!/bin/bash

source /deckhouse/shell_lib.sh

function __config__() {
  cat << EOF
    configVersion: v1
    beforeHelm: 100
EOF
}

function __main__() {
  if values::has cloudProviderOpenstack.internalSubnet; then
    subnet_regex="$(rgxg cidr "$(values::get cloudProviderOpenstack.internalSubnet)")"
    values::set cloudProviderOpenstack.internal.internalSubnetRegex "$subnet_regex"
  fi
}

hook::run "$@"
