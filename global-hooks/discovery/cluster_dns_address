#!/bin/bash

source /deckhouse/shell_lib.sh

function __config__() {
  cat << EOF
    configVersion: v1
    kubernetes:
    - name: kube_dns_svc
      apiVersion: v1
      kind: Service
      namespace:
        nameSelector:
          matchNames: [kube-system]
      nameSelector:
        matchNames: [kube-dns]
      jqFilter: '.spec.clusterIP'
      executeHookOnEvent: ["Added", "Modified"]
EOF
}

function __on_kubernetes::kube_dns_svc::synchronization() {
  values::set global.discovery.clusterDNSAddress "$(context::get objects.0.filterResult)"
}

function __on_kubernetes::kube_dns_svc::added_or_modified() {
  values::set global.discovery.clusterDNSAddress "$(context::get filterResult)"
}

hook::run "$@"
