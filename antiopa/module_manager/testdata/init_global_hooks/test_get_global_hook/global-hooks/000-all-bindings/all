#!/bin/bash -e

if [[ "$1" == "--config" ]]; then
    cat << EndOfJSON
{
  "afterAll": 1,
  "beforeAll": 1,
  "onStartup": 1,
  "schedule": [{
    "crontab": "* * * * *",
    "allowFailure": true
  }],
  "onAdd": [{
    "kind": "configmaps",
    "selector": {
      "matchLabels": {
        "component": "component1"
      },
      "matchExpressions": [{
        "key": "tier",
        "operator": "In",
        "values": ["cache"]
      }]
    },
    "namespaceSelector": {
      "matchNames": ["namespace1"],
      "any": false
    },
    "jqFilter": ".items[] | del(.metadata, .field1)",
    "allowFailure": true
  }],
  "onUpdate": [{
    "kind": "namespaces",
    "selector": {
      "matchLabels": {
        "component": "component2"
      },
      "matchExpressions": [{
        "key": "tier",
        "operator": "In",
        "values": ["cache"]
      }]
    },
    "namespaceSelector": {
      "matchNames": ["namespace2"],
      "any": false
    },
    "jqFilter": ".items[] | del(.metadata, .field2)",
    "allowFailure": true
  }],
  "onDelete": [{
    "kind": "pods",
    "selector": {
      "matchLabels": {
        "component": "component3"
      },
      "matchExpressions": [{
        "key": "tier",
        "operator": "In",
        "values": ["cache"]
      }]
    },
    "namespaceSelector": {
      "any": true
    },
    "jqFilter": ".items[] | del(.metadata, .field3)",
    "allowFailure": true
  }]
}
EndOfJSON
fi
