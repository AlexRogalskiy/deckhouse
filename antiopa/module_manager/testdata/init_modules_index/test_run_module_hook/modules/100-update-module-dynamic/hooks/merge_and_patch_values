#!/bin/bash -e

if [[ "$1" == "--config" ]]; then
    echo "
{
    \"beforeHelm\": 1
}
"
else
    cat << 'EOF' > "$DYNAMIC_VALUES_JSON_MERGE_PATH"
{
    "updateModuleDynamic": {
        "a": 5,
        "b": 6
    }
}
EOF
    cat << 'EOF' > "$DYNAMIC_VALUES_JSON_PATCH_PATH"
[
    { "op": "replace", "path": "/updateModuleDynamic/a", "value": 9 },
    { "op": "remove", "path": "/updateModuleDynamic/b"},
    { "op": "add", "path": "/updateModuleDynamic/c", "value": "10" }
]
EOF
fi
